@model IEnumerable<GlobalHack.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShelterId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirmed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShelterId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Confirmed)
        </td>
        <td>
            @if (!item.Confirmed && item.Date.Date == DateTime.Now.Date)
            {
                @Html.ActionLink("Confirm", "Confirm", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to options", "Index", "People", new { Id = ViewBag.PersonId }, null)
</div>