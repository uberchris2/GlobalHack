@model IEnumerable<GlobalHack.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

<h1>@Html.ActionLink("Home", "Index", "People", new { Id = ViewBag.PersonId }, null) > Reservations</h1>

<table class="table">
    <tr>
        <th>
            Shelter
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirmed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Shelter.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shelter.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shelter.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Confirmed)
        </td>
        <td>
            @if (!item.Confirmed && item.Date.Date == DateTime.Now.Date)
            {
                @Html.ActionLink("Confirm", "Confirm", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>